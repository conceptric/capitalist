- title "Assets"

%table
  %tr
    %th Name
    %th.description Description
  - for asset in @assets
    %tr
      %td= asset.name
      %td= asset.description
      %td.nav= link_to 'Show', asset_path(asset)
      %td.nav= link_to 'Edit', edit_asset_path(asset)
      %td.nav= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Asset", new_asset_path
