<% title "New Transaction" %>

<%= simple_form_for @transaction do |f| %>
  <%= f.error_messages %>
  <%= f.input :date %>
  <%= f.association :asset %>
  <%= f.input :total_value %>
  <%= f.input :cost, :as => :decimal %>
  <%= f.button :submit %>
<% end %>

<p><%= link_to "Back to List", transactions_path %></p>
