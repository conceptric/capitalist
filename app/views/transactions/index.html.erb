<% title "Transactions" %>

<table>
  <tr>
    <th>Date</th>
    <th>Asset</th>
    <th>Units</th>
    <th>Total Value</th>
    <th>Cost</th>
  </tr>
  <% for transaction in @transactions %>
    <tr>
      <td><%= transaction.date.strftime("%d %B %Y") %></td>
      <td><%= transaction.asset.name %></td>
      <td><%= transaction.units %></td>
      <td><%= number_to_currency(transaction.total_value, :unit => '£') %></td>
      <td><%= number_to_currency(transaction.cost, :unit => '£') %></td>
      <td><%= link_to "Edit", edit_transaction_path(transaction) %></td>
      <td><%= link_to "Destroy", transaction, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Transaction", new_transaction_path %></p>
