%table#positions
  %tr
    %th Asset
    %th Units
    %th Status
    %th Average Unit Price
  - for position in @positions
    %tr.position
      %td= position.asset.name
      %td.numeric= position.current_units
      %td= position.status
      %td.numeric= number_to_currency(position.average_unit_price, :unit => 'Â£')
      %td.nav= link_to 'Show', position_path(position)
      %td.nav= link_to 'Edit', edit_position_path(position)
      %td.nav= link_to 'Destroy', position, :confirm => 'Are you sure?', :method => :delete
      