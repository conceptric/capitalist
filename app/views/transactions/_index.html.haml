%table#transactions
  %tr
    %th Date
    %th Units
    %th Value
    %th Expenses
    %th Unit Price
  - for transaction in @transactions
    %tr
      %td= transaction.date.strftime("%d %B %Y")
      %td.numeric= transaction.units
      %td.numeric= number_to_currency(transaction.value, :unit => '£')
      %td.numeric= number_to_currency(transaction.expenses, :unit => '£')
      %td.numeric= number_to_currency(transaction.unit_price, :unit => '£')
      %td= link_to 'Edit', url_for([:edit, transaction])
      %td= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete        