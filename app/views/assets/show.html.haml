- title "Summary of #{@asset.name} Holdings"

%h2 Position Summary

%p#total_units= "You currently hold #{@asset.units_held} units"

%h2 Positions

%table#positions
  %tr
    %th Asset
    %th Units
    %th Status
  - for position in @asset.positions
    %tr.position
      %td= position.asset.name
      %td= position.current_units
      %td= position.status
      %td= link_to 'Show', position
      
%h2 Transactions

%table#transactions
  %tr
    %th Date
    %th Action
    %th Units
    %th Value
  - for transaction in @asset.transactions
    %tr{:class => "#{transaction.type.downcase}"}
      %td= transaction.date.strftime("%d %B %Y")
      %td= transaction.type
      %td= transaction.units
      %td= number_to_currency(transaction.value, :unit => 'Â£')

%p
  = link_to "View All", assets_path